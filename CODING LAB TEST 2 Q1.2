package numericData;

import java.util.Scanner;

class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		float radius;
		float height;
		double surfaceArea;
		double baseArea;
		double volume;
		
		System.out.print("The radius is ");
		radius=input.nextFloat();
		System.out.print("The height is ");
		height=input.nextFloat();
		
		baseArea = Math.PI * radius * radius;
		surfaceArea = 2.0 * Math.PI * radius + 2.0 * baseArea;
		volume = baseArea * height;
		
		System.out.printf("The surface area is: %.2f" ,surfaceArea);
		System.out.printf("\nThe base area is: %.2f" , baseArea);
		System.out.printf("\nThe volume is: %.2f" , volume);

	}

}
